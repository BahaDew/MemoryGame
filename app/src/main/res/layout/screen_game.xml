<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_ocean"
    tools:context="com.example.memorygame.presentation.screen.game.GameScreen">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_menu"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/bg_easy_btn"
        android:padding="16dp"/>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="@id/btn_menu"
        app:layout_constraintRight_toRightOf="@id/btn_menu"
        app:layout_constraintBottom_toBottomOf="@id/btn_menu"
        app:layout_constraintLeft_toLeftOf="@id/btn_menu"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/animation_home"/>

    <GridLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toTopOf="@id/btn_menu"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>